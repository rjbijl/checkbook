{% extends 'base.html.twig' %}

{% block body %}
    {{ form(filterForm) }}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Datum</th>
                <th>Tegenrekening</th>
                <th>Bedrag</th>
            </tr>
        </thead>
    {% for mutation in mutations %}
        <tr>
            <td>{{ mutation.date|date('d-m-Y') }}</td>
            <td>{{ mutation.contraAccountName }}</td>
            <td>&euro; {% if 'credit' == mutation.type %}- {% endif %} {{ mutation.amount / 100 }}</td>
        </tr>
    {% endfor %}
        <tfoot>
            <tr>
                <th colspan="2">Totaal</th>
                <th>&euro; {{ total/100 }}</th>
            </tr>
        </tfoot>
    </table>
{% endblock %}