{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(filterForm) }}
    <div class="form-group">

    {{ form_rest(filterForm) }}
    </div>
    <div class="btn-group btn-group-block">
        <input type="submit" class="btn btn-primary" value="Filter">
        <a class="btn btn-secondary" href="/">Clear</a>
    </div>
    {{ form_end(filterForm) }}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Datum</th>
                <th>Tegenrekening</th>
                <th>Categorie</th>
                <th>Bedrag</th>
            </tr>
        </thead>
    {% for mutation in mutations %}
        <tr>
            <td>{{ mutation.date|date('d-m-Y') }}</td>
            <td>{{ mutation.contraAccountName }}</td>
            <td>{% if mutation.category %}{{ mutation.category.name }}{% else %}&nbsp;{% endif %}</td>
            <td>&euro; {% if 'credit' == mutation.type %}- {% endif %} {{ mutation.amount / 100 }}</td>
        </tr>
    {% endfor %}
        <tfoot>
            <tr>
                <th colspan="3">Totaal</th>
                <th>&euro; {{ total/100 }}</th>
            </tr>
        </tfoot>
    </table>
{% endblock %}